{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "extends": [
      "next/core-web-vitals", 
      "next/typescript",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "@typescript-eslint/no-non-null-asserted-optional-chain": "warn",
      "@typescript-eslint/no-explicit-any": "off", // Disable the rule for explicit any
      "@typescript-eslint/no-unused-vars": "warn", // Change to "off" if you want to ignore unused vars
      "no-extra-semi": "off",
      "no-vars": "off"
  }
}
